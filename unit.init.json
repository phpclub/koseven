{
  "listeners": {
    "*:80": {
      "pass": "routes"
    }
  },
  "routes": [
    {
      "match": {
        "uri": "!/index.php"
      },
      "action": {
        "share": "/app/public$uri",
        "fallback": {
          "pass": "applications/koseven"
        }
      }
    }
  ],
  "applications": {
    "koseven": {
      "type": "php",
      "root": "/app/public/",
      "script": "index.php",
      "processes": {
        "max": 10,
        "spare": 1,
        "idle_timeout": 60
      }
    }
  }
}